// ESP32 Back EMF Detector
const int emfPin = 35; // Analog pin connected to voltage divider

void setup() {
  Serial.begin(115200);
  // Optional: set ADC resolution (default is 12-bit, 0-4095)
  analogReadResolution(12);
}

void loop() {
  int emfValue = analogRead(emfPin); // Read ADC value (0-4095)

  if (emfValue > 100) { // Threshold to avoid noise
    Serial.print("Back EMF detected! Value: ");
    Serial.println(emfValue);
  }

  delay(100); // Small delay to reduce Serial spam
}
